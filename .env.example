# Database Configuration
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/waternity"

# Redis Configuration (optional)
REDIS_URL="redis://localhost:6379"

# Hedera Network Configuration
HEDERA_NETWORK="testnet"
HEDERA_ACCOUNT_ID="0.0.YOUR_ACCOUNT_ID"
HEDERA_PRIVATE_KEY="YOUR_PRIVATE_KEY_HERE"

# Hedera Consensus Service (HCS) Topic ID
HCS_TOPIC_ID="0.0.YOUR_TOPIC_ID"

# Optional: Hedera Token Service (HTS) Configuration
HTS_TOKEN_ID="0.0.YOUR_TOKEN_ID"

# Hedera Services
MIRROR_NODE_URL="https://testnet.mirrornode.hedera.com/api/v1"
HASHSCAN_BASE="https://hashscan.io/testnet"

# NextAuth Configuration
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NODE_ENV="development"
APP_ENV="development"
PORT=3000

# API Configuration
API_BASE_URL="http://localhost:3000/api"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
CORS_ORIGIN="http://localhost:3000"
CSRF_SECRET="your-csrf-secret"

# Logging Configuration
LOG_LEVEL="info"
ENABLE_ANALYTICS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30