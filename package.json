{
  "name": "waternity-hedera",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:seed": "npm run db:push && npm run db:seed && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "setup": "./setup.sh",
    "setup:quick": "npm install && npm run db:generate && npm run db:push && npm run dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "rm -f prisma/dev.db && npm run db:push && npm run db:seed",
    "hedera:check": "node -e \"console.log('Hedera Account:', process.env.HEDERA_ACCOUNT_ID)\"",
    "compile": "hardhat compile",
    "deploy:testnet": "hardhat run scripts/deploy-water-management.js --network hederaTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy-water-management.js --network hederaMainnet",
    "verify:testnet": "hardhat verify --network hederaTestnet",
    "postinstall": "prisma generate && prisma db push"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.90.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "@upstash/redis": "^1.35.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv": "^6.4.1",
    "dotenv": "^17.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "framer-motion": "^12.23.21",
    "hashconnect": "^3.0.13",
    "lru-cache": "^11.2.1",
    "lucide-react": "^0.451.0",
    "next": "14.2.15",
    "next-auth": "^4.24.11",
    "postcss": "^8",
    "react": "^18",
    "react-dom": "^18",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5",
    "ulid": "^3.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@hashgraph/sdk": "^2.73.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.5.0",
    "@types/eslint": "^8",
    "@types/lru-cache": "^7.10.10",
    "@vitejs/plugin-react": "^5.0.3",
    "ethers": "^5.8.0",
    "hardhat": "^2.22.17",
    "jsdom": "^27.0.0",
    "node-mocks-http": "^1.17.2",
    "prisma": "^5.22.0",
    "tsx": "^4.20.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
