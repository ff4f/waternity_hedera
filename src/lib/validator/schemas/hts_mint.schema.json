{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "messageId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for idempotency"
    },
    "tokenId": {
      "type": "string",
      "minLength": 1,
      "description": "Token ID to mint"
    },
    "amount": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "description": "Amount to mint as string"
    }
  },
  "required": ["messageId", "tokenId", "amount"],
  "additionalProperties": false
}