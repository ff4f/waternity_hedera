{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hcs.common.schema.json",
  "title": "HCS Common Schema",
  "description": "Common schema for HCS events",
  "type": "object",
  "properties": {
    "messageId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the message"
    },
    "type": {
      "type": "string",
      "enum": [
        "METER_READING",
        "VALVE_COMMAND",
        "DOC_ANCHORED",
        "SETTLEMENT_REQUESTED",
        "SETTLEMENT_APPROVED",
        "SETTLEMENT_EXECUTED",
        "TOKEN_MINTED",
        "PAYOUT_DISTRIBUTED"
      ],
      "description": "Type of HCS event"
    },
    "wellId": {
      "type": "string",
      "minLength": 1,
      "description": "Identifier of the well"
    },
    "emittedBy": {
      "type": "string",
      "enum": ["INVESTOR", "OPERATOR", "AGENT", "SYSTEM"],
      "description": "Entity that emitted the event"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Schema version"
    },
    "payload": {
      "type": "object",
      "description": "Event-specific payload data"
    }
  },
  "required": ["messageId", "type", "wellId", "emittedBy", "version", "payload"],
  "additionalProperties": false
}